  <div class="login-container">
    <form action="/login" method="POST">
      <img class="avatar" src="/img/undraw_female_avatar_w3jk.svg" alt="Avatar" />
      <h2>Bienvenido</h2>
      <div class="input-div one">
        <div class="i">
          <i class="bx bx-user-circle"></i>
